{% comment %}
  Renders Hero Slide

  Accepts:
  - title: {String} Title slide
  - description: {String} Description slide
  - ctatext: {String} Button text slide
  - ctalink: {String} Button link slide
  - imagedesktop: {Object} Image desktop slide
  - imagemobile: {Object} Image mobile slide

  Usage:
  {% render 'hero-slide',
    title: <title>,
    description: <description>,
    ctatext: <ctatext>,
    ctalink: <ctalink>,
    imagedesktop: <imagedesktop>,
    imagemobile: <imagemobile>,
  %}
{% endcomment %}

<div class="hero--simple">
  {% if imagedesktop != blank %}
  <div class="hero__image">
    <picture>
      {% assign img_src = imagedesktop | img_url: '1440x' %}
      {% if imagemobile != blank %}
        {% assign img_src_mobile = imagemobile | img_url: '767x' %}
        <source
          media="(max-width:767px)"
          srcSet="{{ img_src_mobile }}"
        />
      {% endif %}
      {% if index == 1 %}
        <img
          src="{{ img_src }}"
          height="100%"
          width="100%"
          title="{{ imagedesktop.alt }}"
          alt="{{ imagedesktop.alt }}"
        />
      {% else %}
        {% render "render-image"
          img_src: img_src,
          img: imagedesktop,
          size: "400 700 1000 1440",
          alt: imagedesktop.alt,
          width: "100",
          height: "100"
        %}
      {% endif %}
    </picture>
  </div>
  {% endif %}

  <div
    class="hero__description"
  >
    {% render "text-buttons"
      title: title,
      description: description,
      link: ctalink,
      link_text: ctatext,
      position: 'center',
      class: 'hero__description-container'
    %}
  </div>
</div>