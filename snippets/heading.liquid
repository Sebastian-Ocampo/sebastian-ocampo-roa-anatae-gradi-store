{% comment %}
    Heading

    Accepts:
    - heading: {Number} type heading (Required)
    - class: {String} ClassName in tag HTML
    - content: {String} Heading content (Required)

    Usage:
    {% render 'heading'
      heading: 1|2|3|4|5|6,
      class: "h1",
      content: "Hello gradi !"
    %}
{% endcomment %}

{% case heading %}
  {% when 1 %}
    {%- assign tag = 'h1' -%}
  {% when 2 %}
    {%- assign tag = 'h2' -%}
  {% when 3 %}
    {%- assign tag = 'h3' -%}
  {% when 4 %}
    {%- assign tag = 'h4' -%}
  {% when 5 %}
    {%- assign tag = 'h5' -%}
  {% when 6 %}
    {%- assign tag = 'h6' -%}
  {% else %}
    {%- assign tag = 'span' -%}
    {%- assign class_title = ' title' -%}
{% endcase %}

<{{ tag }} class="{{ class | default: "margin-title" }}{{ class_title }}">
  {{ content | default: "Hello gradi" }}
</{{ tag }}>

