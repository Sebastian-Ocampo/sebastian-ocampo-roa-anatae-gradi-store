{% if section.settings.row_icon_title != blank %}
  <h2>
    {{ section.settings.row_icon_title }}
  </h2>
{% endif %}

<div class="flex elements__images">
  {% for block in section.blocks %}
    <div class="element__image">
      {% if block.settings.row_image != blank %}
        {% assign url = block.settings.row_image | append: '.svg' | file_url %}
        {% render "render-image" 
         class: "class_image",
         img_src: url,
         alt: block.settings.row_image,
         width: "57",
         height: "57" %}
      {% endif %}
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Row images",
    "class": "row__images wrapper",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "tittle",
        "label": "Title"
      }, {
        "type": "text",
        "id": "sub_tittle",
        "label": "sub_Title"
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "name": "List items",
        "type": "content",
        "settings": [
          {
            "type": "image_picker",
            "id": "row_image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Row images",
        "blocks": [
          {
            "type": "content"
          }, {
            "type": "content"
          }, {
            "type": "content"
          }, {
            "type": "content"
          }
        ]
      }
    ]
  }
{% endschema %}