{% if section.settings.heading != blank %}
  <h2 class="h1">
    {{ section.settings.heading }}
  </h2>
{% endif %}

{% if section.settings.info_text != blank %}
  <p>
    {{ section.settings.info_text }}
  </p>
{% endif %}

{% form 'customer', class: 'newsletter-form' %}
  <input
    type="hidden"
    name="contact[tags]"
    value="newsletter"
  />

  <div class="grid newsletter-form__wrapper">
    <div class="form__textfield">
      <input
        id="NewsletterForm--{{ section.id }}"
        type="email"
        name="contact[email]"
        class="field__input"
        value="{{ form.email }}"
        aria-required="true"
        autocorrect="off"
        autocapitalize="off"
        autocomplete="email"
        {% if form.errors %}
          autofocus
        {% endif %}
        placeholder="{{ 'newsletter.label' | t }}"
        required
      />
      <label
        for="NewsletterForm--{{ section.id }}"
      >
        {{ 'newsletter.label' | t }}
      </label>
    </div>

    <button
      type="submit"
      class="btn-1 newsletter-form__button"
      name="commit"
      id="Subscribe"
      aria-label="{{ 'newsletter.button_label' | t }}"
    >
      {{ 'newsletter.button_label' | t }}
    </button>

    {%- if form.errors -%}
      <small
        class="newsletter-form__message form__message"
        id="Newsletter-error--{{ section.id }}"
      >
        <!-- eslint-disable max-len -->
        {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
        <!-- eslint-enable max-len -->
      </small>
    {%- endif -%}
  </div>

  {%- if form.posted_successfully? -%}
    <!-- eslint-disable max-len -->
    <span
      class="newsletter-form__message newsletter-form__message--success form__message"
      id="Newsletter-success--{{ section.id }}"
      tabindex="-1"
      autofocus
    >
      {{ 'newsletter.success' | t }}
    </span>
    <!-- eslint-enable max-len -->
  {%- endif -%}
{% endform %}

{% schema %}
{
  "name": "Newsletter",
  "class": "newsletter",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscription to our newslatter"
    },
    {
      "type": "text",
      "id": "info_text",
      "label": "Sub-heading",
      "default": "Lorem ipsum, dolor sit amet consectetur adipisicing elit."
    }
  ]
}
{% endschema %}
