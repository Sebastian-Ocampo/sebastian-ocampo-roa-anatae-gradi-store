{% liquid
  assign logo = section.settings.logo | append: '.svg' | file_url
  assign alt_logo = 'Logo ' | append: shop.name
%}

{% render 'top-bar-announce' 
 show_announce: section.settings.show_announcements,
 blocks_text_announce: section.blocks %}

<div class="header grid">
  <div class="header_logo">
    <a href="{{ routes.root_url }}">
      {% if section.settings.logo != blank %}
        {% render "render-image" 
         class: "",
         img_src: logo,
         alt: alt_logo,
         width: "100",
         height: "100" %}
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>
  </div>
  <nav>
    {% render 'site-nav' 
     linklist: section.settings.menu %}
  </nav>
  <div class="header_user">
    {% render 'user-nav' %}
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.header.name",
    "tag": "section",
    "class": "sticky",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_announcements",
        "label": "t:sections.header.settings.show_announcements.label",
        "default": false
      }, {
        "type": "text",
        "id": "logo",
        "label": "t:sections.header.settings.logo.label"
      }, {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "t:sections.header.settings.menu.label"
      }
    ],
    "max_blocks": 1,
    "blocks": [
      {
        "type": "announcement",
        "name": "Top Bar Announce",
        "settings": [
          {
            "type": "richtext",
            "id": "heading",
            "label": "Message"
          }
        ]
      }
    ]
  }
{% endschema %}