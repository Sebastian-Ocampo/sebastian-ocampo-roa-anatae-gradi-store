{% schema %}
  {
    "name": "Image-text",
    "class": "image-text",
    "blocks": [
      {
        "type": "content",
        "name": "content",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "<p>Hello</p>"
          },
          {
            "type": "checkbox",
            "id": "is_revert",
            "label": "invert content",
            "default": false
          },
          {
            "type": "text",
            "id": "title_btn-it",
            "label": "Title btn",
            "default": "title btn"
          }, {
            "type": "url",
            "id": "link_btn",
            "label": "Link btn"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          }, {
            "type": "image_picker",
            "id": "image-background",
            "label": "image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Carousel content",
        "blocks": [
          {
            "type": "content"
          }, {
            "type": "content"
          }, {
            "type": "content"
          }, {
            "type": "content"
          }
        ]
      }
    ]
  }
{% endschema %}