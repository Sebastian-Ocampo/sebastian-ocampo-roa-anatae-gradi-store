<!-- eslint-disable max-len -->
{% schema %}
  {
    "name": "Image-text",
    "class": "hero--simple",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "hero_title",
        "label": "Title",
        "default": "Title hero responsive"
      },
      {
        "type": "richtext",
        "id": "hero_description",
        "label": "Description",
        "default": "<p>Hello <em>hero</em> <strong>banner </strong><a href=\"/collections/all\" title=\"All\"><strong>link</strong></a></p>"
      },
      {
        "type": "text",
        "id": "title_CTA",
        "label": "Title CTA",
        "default": "CTA"
      },
      {
        "type": "url",
        "id": "link_CTA",
        "label": "Link CTA"
      }, {
        "type": "image_picker",
        "id": "background",
        "label": "Background image"
      }
    ],
    "presets": [
      {
        "name": "Image-text"
      }
    ]
  }
{% endschema %}