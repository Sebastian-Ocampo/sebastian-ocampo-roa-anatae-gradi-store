{% comment %}
If require support mobile image.
Create new setting type image_picker 'background_mobile' and use:

Usage before tag img:
{% if section.settings.background_mobile != blank %}
<source
media="(max-width:767px)"
srcSet={{ section.settings.background_mobile | img_url }}
/>
{% endif %}
{% endcomment %}

<div class="wrapper">
  <div class="image-text">
    {% if section.settings.image != blank %}
      <div class="it__image">
        <picture>
          {% assign img_src = section.settings.image | image_url: width: 603 %}
          <img
            src="{{ img_src }}"
            width="603px"
            title="{{ section.settings.image.alt }}"
            alt="{{ section.settings.image.alt }}"
            loading="lazy" />
        </picture>
      </div>
    {% endif %}

    <div class="it__description">
      <div class="{{ class }} text-buttons wrapper {{ position }}">
        {% if title != blank %}
          <h1>
            {{ title }}
          </h1>
        {% endif %}

        {% if description != blank %}
          <div class="text-buttons__p">
            {{ description }}
          </div>
        {% endif %}

        {% if link != blank and link_text != blank %}
          {% render 'link' 
           url: link,
           content: link_text,
           class: 'btn-1' %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

