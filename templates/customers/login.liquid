<div class="wrapper customer auth auth__login">
  <div
    id="recover-container"
    class="auth__recover"
    data-active="false"
  >
    <h2 id="recover" class="title h2" tabindex="-1">
      {{ 'customer.recover_password.title' | t }}
    </h2>
  
    <div>
      <p>
        {{ 'customer.recover_password.subtext' | t }}
      </p>
  
      {%- form 'recover_customer_password' -%}
        {% assign recover_success = form.posted_successfully? %}
        {% assign errors = form.errors %}
        <script>
          console.log({{ recover_success | json }});
        </script>
        <div class="form_textfield form_textfield--spaced">
          <input type="email"
            value=""
            name="email"
            id="RecoverEmail"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            required
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="RecoverEmail-email-error"
              autofocus
            {% endif %}
            placeholder="{{ 'customer.login_page.email' | t | append: '*' }}"
          >
          <label for="RecoverEmail">
            {{ 'customer.login_page.email' | t }}
          </label>
        </div>
        <div class="flex auth__buttons">
          <div>
            <button class="btn-2">
              {{ 'customer.login_page.submit' | t }}
            </button>
          </div>
          <div>
            <a id="recover-hidden" href="#login">
              {{ 'customer.login_page.cancel' | t }}
            </a>
          </div>
        </div>
      {%- endform -%}
    </div>
  </div>

  <div
    id="login-container"
    data-active="true"
  >
    <h2 id="login" class="title h2" tabindex="-1">
      {{ 'customer.login_page.title' | t }}
    </h2>
    <div>
      {%- if recover_success == true -%}
        <h3
          class="form__message form__message--success test"
          tabindex="-1"
          autofocus
        >
          {% render 'icon-check' %}
          {{ 'customer.recover_password.success' | t }}
        </h3>
      {%- endif -%}
      {% if errors %}
      <small
        id="RecoverEmail-email-error"
        class="form__message form__message--error"
      >
        {% render 'icon-error' %}
        {{ errors.messages['form'] }}
      </small>
      {% endif %}
      {%- form 'customer_login', novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          <h2
            class="form__message form__message--error"
            tabindex="-1"
            autofocus
          >
            {% render 'icon-error' %}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
          {{ form.errors | default_errors }}
        {%- endif -%}
  
        <div class="form_textfield form_textfield--spaced">        
          <input
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            placeholder="{{ 'customer.login_page.email' | t }}"
          >
          <label for="CustomerEmail">
            {{ 'customer.login_page.email' | t }}
          </label>
        </div>
  
        {%- if form.password_needed -%}
          <div class="form_textfield form_textfield--spaced">          
            <input
              type="password"
              value=""
              name="customer[password]"
              id="CustomerPassword"
              autocomplete="current-password"
              {% if form.errors contains 'form' %}
                aria-invalid="true"
              {% endif %}
              placeholder="{{ 'customer.login_page.password' | t }}"
            >
            <label for="CustomerPassword">
              {{ 'customer.login_page.password' | t }}
            </label>
          </div>
  
          <a id="display-recover" href="#recover">
            {{ 'customer.login_page.forgot_password' | t }}
          </a>
        {%- endif -%}
          <div class="flex auth__buttons" id="login-buttons">
            <div>
              <button class="btn-2">
                {{ 'customer.login_page.sign_in' | t }}
              </button>
            </div>
            <div>
              <a href="{{ routes.account_register_url }}">
                {{ 'customer.login_page.create_account' | t }}
              </a>
            </div>
          </div>
        
      {%- endform -%}
    </div>
    
    {%- if shop.checkout.guest_login -%}
      <div>
        <hr>
        <h2>{{ 'customer.login_page.guest_title' | t }}</h2>
  
        {%- form 'guest_login' -%}
          <button class="btn-2">
            {{ 'customer.login_page.guest_continue' | t }}
          </button>
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div>
